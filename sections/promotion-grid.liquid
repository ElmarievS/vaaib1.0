<div class="promotion-grid" 
     data-section-id="{{ section.id }}"
     data-section-type="promotion-grid"
     style="background-color: {{ section.settings.background_color }}">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="section-header">
        <h2 class="section-title">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <div class="section-subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="promotions-wrapper" 
         style="--grid-columns: {{ section.settings.columns_desktop }};">
      {% for block in section.blocks %}
        <div class="promotion-item" 
             {{ block.shopify_attributes }}
             {% if settings.enable_animation %}
             data-aos="fade-up"
             data-aos-delay="{{ forloop.index | times: 150 }}"
             {% endif %}>
          {% if block.settings.image != blank %}
            <div class="promotion-image">
              <img src="{{ block.settings.image | img_url: '600x' }}"
                   alt="{{ block.settings.heading | escape }}"
                   width="600"
                   height="{{ 600 | divided_by: block.settings.image.aspect_ratio | round }}"
                   loading="lazy">
              
              <div class="promotion-content" style="text-align: {{ block.settings.text_alignment }}">
                {% if block.settings.heading != blank %}
                  <h3>{{ block.settings.heading }}</h3>
                {% endif %}
                
                {% if block.settings.text != blank %}
                  <div class="promotion-text">{{ block.settings.text }}</div>
                {% endif %}
                
                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" 
                     class="button button--{{ block.settings.button_style }}"
                     {% if block.settings.open_in_new_tab %}target="_blank"{% endif %}>
                    {{ block.settings.button_label }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Promotion Grid",
  "settings": [
    {
      "type": "header",
      "content": "üìù Content",
      "info": "Add section heading and layout options"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading"
    },
    {
      "type": "header",
      "content": "üé® Layout",
      "info": "Customize the grid layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns on desktop",
      "default": 3
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "promotion",
      "name": "Promotion",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1200 x 800px recommended"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Promotion Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share promotion details</p>"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "outline",
              "label": "Outline"
            }
          ],
          "default": "primary"
        },
        {
          "type": "checkbox",
          "id": "open_in_new_tab",
          "label": "Open link in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotion Grid",
      "blocks": [
        {
          "type": "promotion"
        },
        {
          "type": "promotion"
        },
        {
          "type": "promotion"
        }
      ]
    }
  ]
}
{% endschema %}
