          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "24/7 Support",
            "text": "Here to help anytime"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "Easy Returns",
            "text": "30-day return policy"
          }
        }
      ]
    }
  ]
}
{% endschema %}
