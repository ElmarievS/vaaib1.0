<div class="predictive-search" data-predictive-search>
  <form action="/search" method="get" class="search-form" role="search">
    <div class="search-input-wrapper">
      <input type="search"
             name="q"
             id="Search"
             class="search-input"
             placeholder="{{ 'general.search.placeholder' | t }}"
             aria-label="{{ 'general.search.placeholder' | t }}"
             autocomplete="off"
             data-predictive-search-input>
      
      <button type="submit" class="search-submit" aria-label="{{ 'general.search.submit' | t }}">
        {% render 'icon-search' %}
      </button>

      <button type="button" 
              class="search-close" 
              aria-label="{{ 'general.search.close' | t }}"
              data-predictive-search-close>
        {% render 'icon-close' %}
      </button>
    </div>

    <div class="predictive-search__results" 
         data-predictive-search-results 
         aria-live="polite">
      <div class="predictive-search__loading" data-predictive-search-loading>
        {% render 'icon-spinner' %}
      </div>
    </div>
  </form>
</div>
