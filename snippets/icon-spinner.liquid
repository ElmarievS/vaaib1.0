<svg aria-hidden="true" 
     focusable="false" 
     role="presentation" 
     class="icon icon-spinner" 
     viewBox="0 0 24 24"
     width="24" 
     height="24">
  <circle class="spinner-path" 
          cx="12" 
          cy="12" 
          r="10" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="4">
    <animate attributeName="stroke-dasharray" 
             dur="1.5s" 
             values="0 63;63 63;0 63" 
             repeatCount="indefinite"/>
    <animate attributeName="stroke-dashoffset" 
             dur="1.5s" 
             values="0;-63;-126" 
             repeatCount="indefinite"/>
  </circle>
</svg>
