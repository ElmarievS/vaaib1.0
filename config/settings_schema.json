[
  {
    "name": "theme_info",
    "theme_name": "Vaaib",
    "theme_version": "1.0.0",
    "theme_author": "ElmarieVS",
    "theme_documentation_url": "",
    {
  "theme_support_url": "https://vaaibstudio.com/contact-us"
}
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "default": "#1B3651"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color",
        "default": "#666666"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#F47458"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#000000"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Heading Font",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Body Font",
        "default": "helvetica_n4"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "label": "Base Font Size",
        "default": 16,
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "container_width",
        "label": "Container Width",
        "options": [
          {
            "value": "1200",
            "label": "Default (1200px)"
          },
          {
            "value": "1400",
            "label": "Wide (1400px)"
          },
          {
            "value": "1600",
            "label": "Extra Wide (1600px)"
          }
        ],
        "default": "1200"
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_sticky_header",
        "label": "Enable Sticky Header",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_search",
        "label": "Enable Search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_cart_drawer",
        "label": "Enable Cart Drawer",
        "default": true
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show Payment Icons",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_newsletter",
        "label": "Show Newsletter Signup",
        "default": true
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook URL"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter URL"
      }
    ]
  },
  {
    "name": "Product Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_image_zoom",
        "label": "Enable Image Zoom",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_quantity_selector",
        "label": "Show Quantity Selector",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_variant_labels",
        "label": "Show Variant Labels",
        "default": true
      }
    ]
  }
]
