{
  "current": {
    "color_primary": "#1B3651",
    "color_secondary": "#666666",
    "color_accent": "#F47458",
    "color_background": "#FFFFFF",
    "color_text": "#000000",
    "type_header_font": "helvetica_n4",
    "type_body_font": "helvetica_n4",
    "base_font_size": 16,
    "container_width": "1200",
    "enable_sticky_header": true,
    "enable_search": true,
    "enable_cart_drawer": true,
    "show_payment_icons": true,
    "show_newsletter": true,
    "sections": {
      "header": {
        "type": "header",
        "settings": {
          "enable_sticky": true,
          "enable_search": true,
          "enable_cart": true,
          "menu": "main-menu"
        }
      },
      "footer": {
        "type": "footer",
        "blocks": {
          "footer-0": {
            "type": "text",
            "settings": {
              "title": "About Us",
              "text": "<p>Share store details, promotions, or brand content with your customers.</p>"
            }
          },
          "footer-1": {
            "type": "links",
            "settings": {
              "title": "Quick Links",
              "menu": "footer"
            }
          },
          "footer-2": {
            "type": "social",
            "settings": {
              "title": "Follow Us"
            }
          }
        },
        "block_order": [
          "footer-0",
          "footer-1",
          "footer-2"
        ],
        "settings": {
          "show_newsletter": true,
          "show_payment_methods": true
        }
      },
      "hero-banner": {
        "type": "hero-banner",
        "settings": {
          "full_width": true,
          "banner_height": 500,
          "text_alignment": "center",
          "enable_parallax": true
        }
      },
      "collection-template": {
        "type": "collection-template",
        "settings": {
          "products_per_row": 4,
          "products_per_page": 24,
          "enable_sorting": true,
          "enable_filtering": true,
          "show_vendor": true
        }
      }
    }
  }
}
